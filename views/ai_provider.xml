<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ai_provider_tree" model="ir.ui.view">
        <field name="name">ai.provider.list</field>
        <field name="model">ai.provider</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="active" column_invisible="1" />
            </list>
        </field>
    </record>

    <record id="ai_provider_form" model="ir.ui.view">
        <field name="name">ai.provider.form</field>
        <field name="model">ai.provider</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <div name="title" class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="main">
                        <group name="left">
                            <field name="code" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                            <field name="api_key" password="True" />
                            <field name="active" invisible="1" />
                        </group>
                        <group name="right" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ai_provider_search" model="ir.ui.view">
        <field name="name">ai.provider.search</field>
        <field name="model">ai.provider</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <separator />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
            </search>
        </field>
    </record>

    <record id="ai_provider_window" model="ir.actions.act_window">
        <field name="name">AI Providers</field>
        <field name="res_model">ai.provider</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="ai_provider_menu"
        name="Providers"
        parent="ai_config_menu"
        sequence="10"
        action="ai_provider_window"
    />
</odoo>
